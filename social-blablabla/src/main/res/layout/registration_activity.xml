<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="ru.social.View.Activity.Auth.RegistrationActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <include layout="@layout/toolbar"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
            <LinearLayout
                    style="@style/Item">
                <ImageView
                        android:id="@+id/imageView7"
                        style="@style/Icon.Fio"/>
                <EditText
                        android:id="@+id/editTextFio"
                        style="@style/EditText.Fio"/>
            </LinearLayout>
            <LinearLayout
                    style="@style/Item">
                <ImageView
                        android:id="@+id/imageView8"
                        style="@style/Icon.Email"/>
                <EditText
                        android:id="@+id/editTextEmail"
                        style="@style/EditText.Email"/>
            </LinearLayout>
            <LinearLayout
                    style="@style/Item">
                <ImageView
                        android:id="@+id/imageView9"
                        style="@style/Icon.Phone"/>
                <EditText
                        android:id="@+id/editTextPhone"
                        style="@style/EditText.Phone"/>
            </LinearLayout>
            <LinearLayout
                    style="@style/Item">
                <ImageView
                        android:id="@+id/imageView10"
                        style="@style/Icon.Password" />
                <EditText
                        android:id="@+id/editTextPassword"
                        style="@style/EditText.Password"/>
            </LinearLayout>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonRegistration"
                    android:text="@string/registration"
                    android:onClick="onClickRegistration"
                    android:background="@drawable/bg_button"
                    android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
