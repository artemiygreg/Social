<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11" android:src="@drawable/ic_exit" android:layout_marginLeft="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/exit"
            android:id="@+id/textView" android:textSize="16sp" android:gravity="center_vertical"
            android:layout_marginLeft="10dp" android:textColor="@color/primary"/>
</LinearLayout>