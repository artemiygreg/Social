<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="8dp">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_toRightOf="@+id/icon" android:layout_toLeftOf="@+id/imageView5"
            android:layout_toStartOf="@+id/imageView5" android:layout_centerVertical="true" android:textSize="18sp"
            android:layout_marginLeft="10dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:src="@drawable/ic_arrow_right" android:layout_centerVertical="true"/>
</RelativeLayout>